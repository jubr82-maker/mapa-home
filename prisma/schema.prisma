generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Listing {
  id           String   @id @default(cuid())
  title        String
  price        Int
  location     String
  municipality String?
  canton       String?
  type         String?    // au lieu d'un enum, simple texte
  beds         Int
  baths        Int
  area         Int
  floor        Int?
  parking      Int?
  energyRating String?
  thumbnail    String?
  images       String?    // JSON.stringify tableau d'images
  description  String
  features     String?    // JSON.stringify tableau de features
  latitude     Float?
  longitude    Float?
  embedding    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
